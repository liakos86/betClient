<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
     <style name="BottomTab">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottom_button_background_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BottomTabImage">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BottomTabText">
        <item name="android:textColor">@color/white_back</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:textStyle">bold</item>
    </style>
    
     <style name="buttonStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_back</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:layout_height">@dimen/standard_view_height</item>
        <item name="android:maxHeight">@dimen/standard_view_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
</resources>
