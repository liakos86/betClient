<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    			android:layout_width="fill_parent"
    			android:baselineAligned="false"
                android:background="@android:color/white"
                android:layout_height="wrap_content" android:padding="8dp"
                android:minHeight="54dp">
        
     <TextView android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/country_and_league_name"
              android:textColor="@android:color/black" android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
     
      <TextView android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:textSize="14sp" android:id="@+id/number_of_events"
              android:textColor="@android:color/black" android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    
</RelativeLayout>